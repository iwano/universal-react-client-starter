{
  "name": "universal-react-client-starter",
  "version": "0.0.1",
  "description": "Monorepo for Universal React Client (Web, Electron, React Native) with code reuse",
  "main": "index.js",
  "author": "ivan calderon",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "web": "yarn workspace web start",
    "desktop": "cross-env BROWSER=none concurrently \"yarn web\" \"yarn workspace desktop webpack:dev -w\" \"wait-on http://localhost:3000 && yarn workspace desktop start\"",
    "android": "yarn workspace mobile android",
    "ios": "yarn workspace mobile ios",
    "lint": "yarn workspaces run lint",
    "test": "yarn workspaces run test"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.4",
    "@types/react": "^16.9.35",
    "@types/react-native": "^0.62.10",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "jest": "^24.9.0",
    "react-native": "^0.62.2",
    "shx": "^0.3.2",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "react": "^16.13.1"
  }
}
